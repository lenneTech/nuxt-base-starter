{
"nuxt.isNuxtApp": true,
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "eslint.options": {
      "extensions": [
          ".html",
          ".js",
          ".vue",
          ".jsx"
      ]
  },
  "eslint.validate": [
      "html",
      "vue",
      "javascript",
      "javascriptreact",
  ],
  "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
  },
  "[javascript]": {
      "editor.formatOnSave": false
  },
  "eslint.format.enable": true,
  "css.validate": false,
}